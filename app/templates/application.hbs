<div class='common'>
  <a href='http://arccadd.com'>
    <img class='logo' src='/assets/images/logo.png'>
  </a>
  <h1>
    <select>
      <option>NBC 3.2.3.1</option>
    </select>
  </h1>
  <h2>
    Limiting Distance
  </h2>
  <h3>
    <input class='title' placeholder='Project Title'>
  </h3>
  <form>
    <div class='section'>
      <div class='heading'>Units</div>
      <div>
        <div class='field'>
          <label>
            <input checked='' class='metric' name='units' type='radio' value='metric'>
            Metric
          </label>
        </div>
        <div class='field'>
          <label>
            <input class='imperial' name='units' type='radio' value='imperial'>
            Imperial
          </label>
        </div>
      </div>
    </div>
    <div class='section'>
      <div class='heading'>Occupancy group</div>
      <div>
        <div class='field'>
          <label>
            <input checked='' class='group1' name='group' type='radio' value='1'>
            A, B, C, D, F3
          </label>
        </div>
        <div class='field'>
          <label>
            <input class='group2' name='group' type='radio' value='2'>
            E, F1, F2
          </label>
        </div>
      </div>
    </div>
    <div class='section'>
      <div class='heading'>Fire protection</div>
      <div>
        <div class='field'>
          <label>
            <input checked='' class='unsprinklered' name='sprinklers' type='radio' value='unsprinklered'>
            Unsprinklered
          </label>
        </div>
        <div class='field'>
          <label>
            <input class='sprinklered' name='sprinklers' type='radio' value='sprinklered'>
            Sprinklered
          </label>
        </div>
      </div>
    </div>
  </form>
</div>
<div {{bind-attr class="face-count :faces"}}>
  {{#each face in faces}}
    {{building-face face=face}}
  {{/each}}
</div>
<footer>
  Developed by <a href='http://github.com/backspace'>Buck Doyle</a> for <a href='http://arccadd.com'>Arccadd Architecture Inc</a>.
</footer>
