<div {{bind-attr class="indexClass :face"}}>
  <div class='face-label'>
    <h3>
      <input {{bind-attr placeholder="labelPlaceholder"}}>
    </h3>
    <div class='controls'>
      <span class='add'>&#8853;</span>
      <span class='remove'>&#8854;</span>
    </div>
    <div class='section'>
      <div class='heading'>Dimensions</div>
      <div>
        <div class='field'>
          <input class='height' min='0' name='height' size='6' step='1' type='text'><div class='units'></div><label for='height'>Height</label>
        </div>
        <div class='field'>
          <input class='width' min='0' name='width' size='6' step='1' type='text'><div class='units'></div><label for='width'>Width</label>
        </div>
        <div class='field calculated-area'>
          <input size='6' tabindex='-1' type='text'><div class='units squared'></div><label>Building face area</label>
        </div>
        <div class='field'>
          <input class='distance' min='0' name='distance' size='6' step='1' type='text'><div class='units'></div><label for='distance'>Limiting distance</label>
        </div>
      </div>
    </div>
    <div class='section'>
      <div class='heading'>Unprotected opening area</div>
      <div>
        <input class='area' max='100' min='0' name='area' size='6' step='1' type='text'><span>%</span><div class='units squared'></div>
      </div>
    </div>
    <div class='section'>
      <div class='heading'>Exposed building face</div>
      <div>
        <div class='rating'>&nbsp;</div>
      </div>
    </div>
  </div>
</div>
